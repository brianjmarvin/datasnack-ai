{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Schema for risk check chat",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
	  "description": "Should be a random uuid"
    },
    "projectID": {
      "type": "string",
	  "default": "d4d7b04e-9eb3-497b-a6d9-5e53cb0a5753"
    },
    "section": {
      "type": "string",
	  "default": "AI WORKFLOW"
    },
    "userID": {
      "type": "string",
	  "default": "W2Ln6knvwtfMcHEMuwQrAjTTKIr1"
    },
    "message": {
      "type": "string",
	  "description": "This is field for the new message."
    },
    "senderType": {
      "type": "string",
	  "default": "user"
    }
  },
  "required": [
    "id",
    "projectID",
    "section",
    "userID",
    "message",
    "senderType"
  ]
}